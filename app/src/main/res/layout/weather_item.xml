<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.ncu.yzj.weather.model.Weather.DataBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="10dp"
        android:background="@android:color/white"
        >


        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{data.day}"
            android:textSize="16sp"
            android:hint="日期"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/week"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@{data.week}"
            android:textSize="16sp"
            android:hint="星期"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/date"
            app:layout_constraintBottom_toBottomOf="@id/date"
            app:layout_constraintStart_toEndOf="@id/date"/>
        <TextView
            android:id="@+id/update_time"
            android:layout_width="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:hint="时间"
            android:layout_height="wrap_content"
            android:text="@{data.date}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/wea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="天气情况"
            android:text="@{data.wea}"
            android:layout_margin="4dp"
            android:padding="4dp"
            app:layout_constraintTop_toTopOf="@id/week"
            app:layout_constraintBottom_toBottomOf="@id/week"
            app:layout_constraintStart_toEndOf="@id/week"

            />
        <TextView
            android:id="@+id/label_tem1"
            android:text="最高温度:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/wea"
            app:layout_constraintStart_toStartOf="@id/date"/>
        <TextView
            android:id="@+id/tem1"
            android:text="@{data.tem1}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/label_tem1"
            app:layout_constraintStart_toEndOf="@id/label_tem1"/>
        <TextView
            android:id="@+id/label_tem2"
            android:text="最低温度:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/label_tem1"
            app:layout_constraintStart_toEndOf="@id/tem1"/>
        <TextView
            android:id="@+id/tem2"
            android:text="@{data.tem2}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/label_tem2"
            app:layout_constraintStart_toEndOf="@id/label_tem2"/>
        <TextView
            android:id="@+id/label_tem"
            android:text="当前温度:"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/label_tem1"
            app:layout_constraintStart_toEndOf="@id/tem2"/>
        <TextView
            android:id="@+id/tem"
            android:text="@{data.tem}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@id/label_tem"
            app:layout_constraintStart_toEndOf="@id/label_tem"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>